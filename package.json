{
  "name": "jabref-4-vscode",
  "publisher": "JabRef e.V.",
  "displayName": "JabRef 4 VSCode",
  "description": "Adds the ability to use the language server from JabRef inside VSCode and other JabRef features.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:bibtex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "bibtex",
        "extensions": [
          ".bib",
          ".bibtex"
        ]
      }
    ],
    "configuration": {
      "title": "JabRef 4 VSCode",
      "properties": {
        "jabref.consistencyCheck": {
          "type": "boolean",
          "default": true,
          "description": "Enable consistency check"
        },
        "jabref.integrityCheck": {
          "type": "boolean",
          "default": true,
          "description": "Enable integrity check"
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}